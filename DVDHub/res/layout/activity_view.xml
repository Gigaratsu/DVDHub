<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewLay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ben.dvdhub.ViewActivity" >

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/viewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:text="Title:" />

    <TextView
        android:id="@+id/titleViewOutput"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/viewTitle"
        android:layout_alignTop="@+id/viewTitle"
        android:layout_toRightOf="@+id/viewTitle"
        android:gravity="center_horizontal|left"
        android:text="Sample"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/viewTitle"
        android:layout_alignTop="@+id/viewTitle"
        android:layout_below="@+id/viewTitle"
        android:layout_marginTop="30dp"
        android:text="Cast:" />

    <TextView
        android:id="@+id/castViewOutput"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:gravity="center_horizontal|left"
        android:text="stuff" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignLeft="@+id/viewTitle"
        android:layout_below="@+id/castViewOutput"
        android:text="Desc:" />

    <TextView
        android:id="@+id/descViewOutput"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/castViewOutput"
        android:layout_toRightOf="@+id/textView4"
        android:text="stuff" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/viewTitle"
        android:layout_below="@+id/descViewOutput"
        android:text="Genre:" />

    <TextView
        android:id="@+id/genreViewOutput"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_below="@+id/descViewOutput"
        android:layout_toRightOf="@+id/textView1"
        android:text="stuff" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/viewTitle"
        android:layout_below="@+id/genreViewOutput"
        android:text="Price:" />

    <TextView
        android:id="@+id/priceViewOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_below="@+id/genreViewOutput"
        android:layout_toRightOf="@+id/textView3"
        android:text="stuff"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/viewTitle"
        android:layout_below="@+id/priceViewOutput"
        android:text="Year:" />

    <TextView
        android:id="@+id/yearViewOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_below="@+id/priceViewOutput"
        android:layout_toRightOf="@+id/textView5"
        android:text="stuff" />

    <Button
        android:id="@+id/saveButt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:onClick="editDVD"
        android:text="Edit" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="delDVD"
        android:text="Delete" />

</RelativeLayout>
